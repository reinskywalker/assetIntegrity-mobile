<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:tint="@color/bermuda"
            app:srcCompat="@drawable/ic_baseline_done_all_24" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lblSiteID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:text="Site ID 0"
            android:textColor="@color/tundora"
            android:textSize="12sp"
            app:fontFamily="@font/opensans_semibold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lblSiteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblSiteID"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="BKXXXXXXXXX"
            android:textColor="@color/tundora"
            android:textSize="12sp"
            app:fontFamily="@font/opensans_regular" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lblTaskDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblSiteName"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="10dp"
            android:text="12 November 2020"
            android:textColor="@color/gray_inactive"
            android:textSize="12sp"
            app:fontFamily="@font/opensans_regular" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>