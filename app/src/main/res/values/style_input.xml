<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxCornerRadiusBottomEnd">3dp</item>
        <item name="boxCornerRadiusBottomStart">3dp</item>
        <item name="boxCornerRadiusTopEnd">3dp</item>
        <item name="boxCornerRadiusTopStart">3dp</item>
        <item name="boxStrokeColor">@color/black_12</item>

        <!--Hint Style-->
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <!--change hint text color when collapsed-->
        <item name="android:textColorHint">@color/white</item>
        <!--change hint text color when floating-->
        <item name="hintTextColor">@color/white</item>

        <item name="materialThemeOverlay">@style/WhiteCursor</item>
    </style>

    <style name="WhiteCursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="LoginInputEditText" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>